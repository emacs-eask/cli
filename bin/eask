function _get_current_directory()
{
  if dirname "$(readlink -f "${0}")" &>/dev/null
  then
    CDIR="$(cd "$(dirname "$(readlink -f "${0}")")" && pwd)"
  elif realpath -e -L "${0}" &>/dev/null
  then
    CDIR="$(realpath -e -L "${0}")"
    CDIR="${CDIR%/eask.js}"
  fi
}

CDIR="$(pwd)"
_get_current_directory

node "$CDIR/../eask.js" "$@"
